<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/blankFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.weather.Home.view.HomeFragment"
        android:label="@string/Home"
        tools:layout="@layout/fragment_home" >
        <argument android:name="lon"
            app:argType="float"
            android:defaultValue="-1.0" />
        <argument
            android:name="lat"
            app:argType="float"
            android:defaultValue="-1.0" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.weather.Favorite.FavoriteFragment"
        android:label="@string/Favorite"
        tools:layout="@layout/fragment_favorite" >
        <action
            android:id="@+id/action_favoriteFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
        <action
            android:id="@+id/action_favoriteFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/alertsFragment"
        android:name="com.example.weather.AlertsFragment"
        android:label="@string/Alerts"
        tools:layout="@layout/fragment_alerts" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.weather.SettingsFragment"
        android:label="@string/Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.weather.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" >
        <argument
            android:name="page"
            app:argType="string"/>
        <action
            android:id="@+id/action_mapFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />
    </fragment>
    <fragment
        android:id="@+id/blankFragment"
        android:name="com.example.weather.BlankFragment"
        android:label="fragment_blank"
        tools:layout="@layout/fragment_blank" >
        <action
            android:id="@+id/action_blankFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>